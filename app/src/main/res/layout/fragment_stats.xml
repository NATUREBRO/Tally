<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 顶栏 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/app_yellow"
        android:gravity="center"
        android:text="统计"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:elevation="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- 1. 时间维度切换 (年 / 月 / 周) -->
            <RadioGroup
                android:id="@+id/rg_time_scope"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_selected_date"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="年"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/selector_text_color"
                    android:background="@drawable/selector_tab_bg"/>

                <RadioButton
                    android:id="@+id/rb_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="月"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/selector_text_color"
                    android:background="@drawable/selector_tab_bg"/>

                <!-- 新增：周 -->
                <RadioButton
                    android:id="@+id/rb_week"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="周"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/selector_text_color"
                    android:background="@drawable/selector_tab_bg"
                    android:checked="true"/> <!-- 默认选中周 -->
            </RadioGroup>

            <!-- 2. 日期导航栏 (上一个 | 当前时间 | 下一个) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/btn_prev"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="前一页"/>

                <TextView
                    android:id="@+id/tv_current_date_range"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2024年5月 第3周"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingHorizontal="16dp"/>

                <ImageButton
                    android:id="@+id/btn_next"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_media_next"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="后一页"/>
            </LinearLayout>

            <!-- 模块1：线状图 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收支趋势"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingStart="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_line"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginHorizontal="16dp"/>

            <!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginVertical="24dp"
                android:layout_marginHorizontal="20dp"/>

            <!-- 模块2：饼状图 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支出构成"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingStart="20dp"
                android:paddingBottom="12dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart_pie"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginHorizontal="16dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>